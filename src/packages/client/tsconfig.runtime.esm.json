{
  "compilerOptions": {
    "lib": ["esnext", "esnext.asynciterable"],
    "module": "ES2020",
    "target": "ES2020",
    "strict": false,
    "esModuleInterop": true,
    "sourceMap": true,
    "noImplicitAny": false,
    "outDir": "runtime-dist/esm",
    "rootDir": "src/runtime",
    "declaration": true,
    "incremental": true,
    "skipDefaultLibCheck": true,
    "tsBuildInfoFile": "tsconfig.runtime.esm.tsbuildinfo",
    "moduleResolution": "node"
  },
  "include": ["src/runtime"],
  "exclude": [
    "archive",
    "dist",
    "build",
    "cli",
    "examples",
    "runtime",
    "src/fixtures",
    "src/__tests__",
    "**/node_modules",
    "**/.*/"
  ]
}
